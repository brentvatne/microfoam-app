{
  "cli": {
    "version": ">= 2.0.0",
    "appVersionSource": "remote"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "ios": {
        "simulator": true
      }
    },
    "preview": {
      "distribution": "internal",
      "env": {
        "FLIPPER_DISABLE": "1"
      }
    },
    "production": {
      "autoIncrement": true,
      "env": {
        "FLIPPER_DISABLE": "1"
      }
    }
  },
  "submit": {
    "production": {}
  }
}
